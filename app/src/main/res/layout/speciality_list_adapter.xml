<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/click_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/un_sel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_8"
        android:paddingEnd="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_8"
        android:paddingRight="@dimen/margin_8"
        android:paddingStart="@dimen/margin_8"
        android:paddingTop="@dimen/margin_10"
        android:textColor="@color/white"
        android:textSize="@dimen/margin_13" />

    <RelativeLayout
        android:id="@+id/hide_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/sel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_sel"
            android:paddingBottom="@dimen/margin_8"
            android:paddingEnd="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_8"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_10"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_13" />

        <ImageView
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_alignRight="@+id/sel_text"
            android:layout_margin="@dimen/margin_4"
            android:background="@drawable/cross" />
    </RelativeLayout>

</RelativeLayout>