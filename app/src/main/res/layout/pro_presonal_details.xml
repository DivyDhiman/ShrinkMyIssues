<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_25"
            android:layout_marginStart="@dimen/margin_25"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:gravity="center"
                android:text="@string/enter_personal_data"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_13"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/spinner_bg">

                <Spinner
                    android:id="@+id/type_speciality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_marginStart="@dimen/margin_8"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/type_speciality_default"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_4"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_marginStart="@dimen/margin_8"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/type_speciality"
                    android:textSize="@dimen/margin_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_36dp" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/intern_coach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_15"
                android:buttonTint="@color/white"
                android:checked="false"
                android:text="@string/register_intern_coach"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/license_or_certification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13"
                    android:background="@drawable/border_bg"
                    android:hint="@string/license_or_certification"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:textSize="@dimen/margin_13" />

                <EditText
                    android:id="@+id/license_certification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bg"
                    android:hint="@string/license_certification"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:textSize="@dimen/margin_13"
                    android:layout_marginTop="@dimen/margin_13" />

                <EditText
                    android:id="@+id/license_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13"
                    android:background="@drawable/border_bg"
                    android:hint="@string/license_number"
                    android:inputType="number"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/license_year_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13"
                    android:background="@drawable/border_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:text="@string/license_issuance"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_4"
                    android:paddingEnd="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:text="@string/upload_copies"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/license_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_weight="0.5"
                        android:background="@drawable/border_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_5"
                            android:paddingEnd="@dimen/margin_4"
                            android:paddingLeft="@dimen/margin_8"
                            android:paddingRight="@dimen/margin_4"
                            android:paddingStart="@dimen/margin_8"
                            android:paddingTop="@dimen/margin_10"
                            android:text="@string/license"
                            android:textSize="@dimen/margin_13" />

                        <ImageView
                            android:id="@+id/license_image"
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            android:layout_marginBottom="@dimen/margin_8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/license_insurance_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_weight="0.5"
                        android:background="@drawable/border_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_5"
                            android:paddingEnd="@dimen/margin_4"
                            android:paddingLeft="@dimen/margin_8"
                            android:paddingRight="@dimen/margin_4"
                            android:paddingStart="@dimen/margin_8"
                            android:paddingTop="@dimen/margin_10"
                            android:text="@string/license_insurance"
                            android:textSize="@dimen/margin_13" />

                        <ImageView
                            android:id="@+id/license_insurance_image"
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            android:layout_marginBottom="@dimen/margin_8" />
                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/supervisor_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13"
                    android:background="@drawable/border_bg"
                    android:hint="@string/supervisor_license"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/upload_letter_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_13"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_4"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_4"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_15"
                    android:text="@string/upload_letter" />

                <LinearLayout
                    android:id="@+id/proof_supervision_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_4"
                        android:paddingLeft="@dimen/margin_8"
                        android:paddingRight="@dimen/margin_4"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingTop="@dimen/margin_10"
                        android:text="@string/proof_supervision"
                        android:textSize="@dimen/margin_13" />

                    <ImageView
                        android:id="@+id/proof_supervision_image"
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:layout_marginBottom="@dimen/margin_8" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_25"
        android:layout_marginStart="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_13"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_35"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/terms_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_4"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_4"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_4"
            android:text="@string/terms_conditions"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_13" />
    </LinearLayout>
</LinearLayout>