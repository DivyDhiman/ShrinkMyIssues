<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_25"
        android:layout_marginStart="@dimen/margin_25"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/identify_areas"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:gravity="center"
            android:text="@string/click_all"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_13" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/age_specialities"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_13" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/age_speciality_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/session_formats"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_13"
                    android:layout_marginTop="@dimen/margin_4" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/session_formats_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/treatment_approaches"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_13"
                    android:layout_marginTop="@dimen/margin_4" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/treatment_approaches_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_4"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_13"
            android:orientation="vertical">

            <TextView
                android:id="@+id/next_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="@string/next_step"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_4"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_4"
                android:paddingStart="@dimen/margin_8"
                android:paddingTop="@dimen/margin_4"
                android:text="@string/terms_conditions"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>