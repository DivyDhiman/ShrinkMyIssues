<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/find_a_shrink_search_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_13"
            android:layout_marginTop="@dimen/margin_13"
            android:text="@string/contact_us"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_13"
        android:layout_marginEnd="@dimen/margin_13"
        android:layout_marginStart="@dimen/margin_13"
        android:layout_marginTop="@dimen/margin_13"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04" />

        <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="0.08"
            android:background="@drawable/border_bg"
            android:hint="@string/title"
            android:paddingEnd="@dimen/margin_13"
            android:paddingStart="@dimen/margin_13"
            android:textColor="@color/black"
            android:textColorHint="@color/off_black"
            android:textSize="@dimen/margin_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="0.07"
            android:background="@drawable/spinner_bg">

            <Spinner
                android:id="@+id/problem_issue_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/problem_issue_default"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_4"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/select_problem_issue"
                android:textSize="@dimen/margin_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_drop_down_black_36dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04" />

        <EditText
            android:id="@+id/write_problem_issue_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="0.08"
            android:background="@drawable/border_bg"
            android:hint="@string/write_problem"
            android:paddingEnd="@dimen/margin_13"
            android:paddingStart="@dimen/margin_13"
            android:textColor="@color/black"
            android:textColorHint="@color/off_black"
            android:textSize="@dimen/margin_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04" />

        <EditText
            android:id="@+id/message_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_weight="0.3"
            android:background="@drawable/border_bg"
            android:gravity="start"
            android:hint="@string/message"
            android:paddingEnd="@dimen/margin_13"
            android:paddingStart="@dimen/margin_13"
            android:paddingTop="@dimen/margin_13"
            android:textColor="@color/black"
            android:textColorHint="@color/off_black"
            android:textSize="@dimen/margin_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.06" />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.08"
            android:background="@drawable/button_bg"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_18"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_13"
        android:layout_marginEnd="@dimen/margin_13"
        android:layout_marginStart="@dimen/margin_13"
        android:layout_marginTop="@dimen/margin_13"
        android:orientation="vertical"
        android:weightSum="1"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/send_image"
                android:layout_width="@dimen/margin_80"
                android:layout_height="@dimen/margin_80"
                android:layout_gravity="center" />
        </LinearLayout>


        <TextView
            android:id="@+id/thanks_sending_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="@string/send_successfully_contact"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <TextView
            android:id="@+id/another_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="@string/do_you_want"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15" />


        <TextView
            android:id="@+id/another_press"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:gravity="center"
            android:text="@string/click_here"
            android:textColor="@color/blue"
            android:textSize="@dimen/margin_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <TextView
            android:id="@+id/go_back_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:gravity="center"
            android:text="@string/go_back"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_15" />

        <TextView
            android:id="@+id/back_press"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:gravity="center"
            android:text="@string/click_here"
            android:textColor="@color/blue"
            android:textSize="@dimen/margin_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.19" />
    </LinearLayout>
</LinearLayout>